@model IEnumerable<WebApplication1.Models.Blogs.BlogModel>



<div class="page-wrapper">

    <!-- Preloader -->
    <div class="preloader"></div>

    <!-- START Page Banner -->
    <section class="page-banner">
        <div class="hero-circle-shape">
            <img src="assets/images/shape/hero-circle-shape.png" alt="Hero Circle Shape">
        </div>
        <div class="hero-moon-shape">
            <img src="assets/images/shape/hero-moon-shape.png" alt="Hero Moon Shape">
        </div>
        <div class="hero-right-shape">
            <img src="assets/images/shape/hero-right-shape.png" alt="Hero Right Shape">
        </div>
        <div class="container">
            <div class="banner-inner">
                <h2>@ViewBag.Gr</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Blogs" asp-area="">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewBag.</li>
                    </ol>
                </nav>
            </div>
        </div>
    </section>
    <!-- END Page Banner -->
    <!-- START Blog Section -->
    <section class="blog-section pb-90 rpb-70">
        <div class="container">
            <div class="row">
                @foreach (var item in Model.ToList())
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="blog-item">
                            <div class="blog-image">
                                <img src="assets/images/blog/blog1.jpg" alt="Blog Image">
                            </div>
                            <div class="blog-content">
                                <h5><a asp-action="Show" asp-controller="Blogs" asp-area="" 
                                       asp-route-blogUrl="@item.UniqeUrl"
                                    asp-route-groupUrl="@item.Group.UniqeUrl"
                                       >@item.Name</a></h5>
                                <ul class="title-description">
                                    <li><a asp-action="Index" asp-controller="Blogs" asp-area="" 
                                           asp-route-groupUrl="@item.Group.UniqeUrl">@item.Group.Name</a></li>
                                    <li>@item.CreateDate</li>
                                </ul>
                                <p>@item.ShortDescription</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- END Blog Section -->


</div>
<!--End pagewrapper-->
<!-- Scroll Top Button -->
<button class="scroll-top scroll-to-target" data-target="html"><i class="fas fa-chevron-up"></i></button>