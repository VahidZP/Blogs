@model WebApplication1.Models.Blogs.BlogGroupModel

@{
    ViewData["Title"] = "Details";
}


<div class="container mt-5">
    <div>

        <h1>Details</h1>
        <h4>@Model.Name</h4>
        <hr />
        <div class="row tm-content-row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
                <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                    <div class="container">
                        <table>
                            <tr>
                                <th class="col-sm-1">
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th class="col-sm-1">
                                    @Html.DisplayNameFor(model => model.UniqeUrl)
                                </th>
                                <th class="col-sm-10">
                                    @Html.DisplayNameFor(model => model.CreateDate)
                                </th>
                            </tr>
                            <tr>
                                <td class="col-sm-auto">
                                    @Html.DisplayFor(model => model.Name)
                                </td>
                                <td class="col-sm-auto">
                                    @Html.DisplayFor(model => model.UniqeUrl)
                                </td>
                                <td class="col-sm-auto">
                                    @Html.DisplayFor(model => model.CreateDate)
                                </td>
                            </tr>
                        </table>
                       </div>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a class="btn btn-block btn-primary text-uppercase" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> 
        <a class="btn btn-block btn-info text-uppercase" asp-action="Index" asp-controller="BlogGroupModels">Back to List</a>
    </div>
</div>
