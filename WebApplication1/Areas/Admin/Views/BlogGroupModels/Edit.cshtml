@model WebApplication1.Models.Blogs.BlogGroupModel

@{
    var modelName = Model.Name;
    ViewData["Title"] = "Edit " + modelName.ToString();

}

<div class="container mt-5">
    <h1>Edit</h1>

    <h4 class="text-info">@Model.Name</h4>
    <hr />
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UniqeUrl" class="control-label"></label>
                            <input asp-for="UniqeUrl" class="form-control" />
                            <span asp-validation-for="UniqeUrl" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreateDate" />
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary text-uppercase" />
                            <a asp-action="Index" class="btn btn-info text-uppercase">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</div>

